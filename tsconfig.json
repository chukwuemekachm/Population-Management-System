{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": true,
    "rootDir": "src/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
